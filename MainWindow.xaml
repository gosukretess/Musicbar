<Window x:Class="Musicbar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Musicbar"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Title="MainWindow" Height="24" Width="106" MouseDown="Move_Window"
        Topmost="True" Background="DarkSlateGray" 
        xmlns:tb="http://www.hardcodet.net/taskbar">

    <StackPanel Orientation="Horizontal" Margin="2">
        <tb:TaskbarIcon x:Name="myNotifyIcon"
                        Visibility="Visible" />

        <Canvas Width="10" Height="20" Margin="0,0,2,0" HorizontalAlignment="Left" Background="DimGray"/>
        <Button x:Name="prev" Content="Prev" HorizontalAlignment="Left" Height="20" Width="20" Click="Prev_Click"/>
        <Button x:Name="play" Content="Play" HorizontalAlignment="Left" Margin="5,0,5,0" Height="20" Width="40" Click="Play_Click"/>
        <Button x:Name="next" Content="Next" HorizontalAlignment="Left" Height="20" Width="20" Click="Next_Click"/>

    </StackPanel>
</Window>
